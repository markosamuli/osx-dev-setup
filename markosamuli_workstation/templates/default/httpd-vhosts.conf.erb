#
# <%= node['sprout']['home'] %>/<%= node["workspace_directory"] %>/httpd-vhosts.conf
#

NameVirtualHost *:<%= node["apache2_settings"]["server_port"] %>

<VirtualHost *:<%= node["apache2_settings"]["server_port"] %> _default_:<%= node["apache2_settings"]["server_port"] %>>
  DocumentRoot "<%= node["apache2_settings"]["server_document_root"] %>"
  ServerName <%= node["apache2_settings"]["server_name"] %>
  <Directory "<%= node['sprout']['home'] %>/<%= node["workspace_directory"] %>">
    AllowOverride All
    Allow from localhost
    Deny from all
  </Directory>
</VirtualHost>